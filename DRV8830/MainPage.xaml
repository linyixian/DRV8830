<Page
    x:Class="DRV8830.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DRV8830"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:Name="btnFwd" Content="正転" HorizontalAlignment="Left" Margin="203,100,0,0" VerticalAlignment="Top" FontSize="36" Width="100" Click="btnFwd_Click"/>
        <Button x:Name="btnFast" Content="早く" HorizontalAlignment="Left" Margin="463,220,0,0" VerticalAlignment="Top" FontSize="36" Width="100" Click="btnFast_Click"/>
        <Button x:Name="btnSlow" Content="遅く" HorizontalAlignment="Left" Margin="203,220,0,0" VerticalAlignment="Top" FontSize="36" Width="100" Click="btnSlow_Click"/>
        <Button x:Name="btnRev" Content="逆転" HorizontalAlignment="Left" Margin="463,100,0,0" VerticalAlignment="Top" FontSize="36" Width="100" Click="btnRev_Click"/>
        <Button x:Name="btnStop" Content="停止" HorizontalAlignment="Left" Margin="335,100,0,0" VerticalAlignment="Top" FontSize="36" Width="100" Click="btnStop_Click"/>

    </Grid>
</Page>
